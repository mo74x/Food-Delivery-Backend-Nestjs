# Production Environment Variables Template
# Copy this file to .env.production and fill in with your actual values

# Application
NODE_ENV=production
PORT=3000

# Database Configuration
DB_TYPE=postgres
DB_HOST=your-production-database-host.com
DB_PORT=5432
DB_USERNAME=your_production_db_user
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
DB_DATABASE=food_delivery_prod
DB_SYNCHRONIZE=false  # CRITICAL: Must be false in production!

# Redis Configuration  
REDIS_HOST=your-production-redis-host.com
REDIS_PORT=6379

# JWT Configuration
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_TO_VERY_LONG_RANDOM_STRING_AT_LEAST_32_CHARACTERS
JWT_EXPIRATION=1h

# CORS Configuration (your actual production domains)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# API Configuration
API_PREFIX=api
SWAGGER_ENABLED=false  # Security: Disable Swagger in production

# Additional Production Settings (Optional)
# SENTRY_DSN=your-sentry-dsn-here
# LOG_LEVEL=info
# RATE_LIMIT_TTL=60
# RATE_LIMIT_MAX=100
